.message{ "data-message-id": message.id }
  .upper-message
    .upper-message__user-name
      = message.user.name
    .upper-message__date
      = message.created_at.strftime("%Y-%m-%d(%a)%H:%M:%S") 
  .lower-message
    %p.lower-message__content
      = message.content
  - if message.image.present?
    .image
      %p.image
        = image_tag(message.image, size: 256)
